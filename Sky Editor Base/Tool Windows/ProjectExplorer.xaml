<skyEditorBase:ToolWindow x:Class="ProjectExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:skyEditorBase="clr-namespace:SkyEditorBase"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TreeView x:Name="tvFiles" Margin="0,30,0,0">
            <TreeView.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="menuAddFolder" Header="Add Folder"/>
                    <MenuItem x:Name="menuAddFile" Header="Add File"/>
                    <Separator/>
                    <MenuItem x:Name="menuOpenInExplorer" Header="Open in File Explorer" />
                </ContextMenu>
            </TreeView.ContextMenu>
        </TreeView>
        <Button x:Name="btnAddFile" Content="Add File" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</skyEditorBase:ToolWindow>
