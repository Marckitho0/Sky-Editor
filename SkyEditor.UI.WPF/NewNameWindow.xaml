<Window x:Class="NewNameWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:res="clr-namespace:SkyEditor.UI.WPF.My.Resources"
    Title="{x:Static res:Language.NewFile}" Height="143" Width="345">
    <Grid>
        <Label x:Name="lbGame" Content="{x:Static res:Language.Name}" HorizontalAlignment="Left" Margin="10,0,0,47" VerticalAlignment="Bottom" />
        <TextBox x:Name="txtName" Margin="56,0,10,47" Height="22" VerticalAlignment="Bottom" />
        <Label x:Name="lbGameSelectorQuestion" Content="{x:Static res:Language.NewNameWindowQuestion}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" />
        <Button x:Name="btnOK" Content="{x:Static res:Language.OK}" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="Button_Click" />
    </Grid>
</Window>