<Window x:Class="FileTypeSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SkyEditor.UI.WPF"
        xmlns:res="clr-namespace:SkyEditor.UI.WPF.My.Resources"
    Title="{x:Static res:Language.FileTypeSelector}" Height="143" Width="345">
    <Grid>
        <ComboBox x:Name="cbGame" Margin="10,0,10,47" Height="22" VerticalAlignment="Bottom" IsEditable="True" DisplayMemberPath="Key" SelectedValuePath="Value" />
        <Label x:Name="lbGameSelectorQuestion" Content="{x:Static res:Language.FileTypeSelectorQuestion}" HorizontalAlignment="Stretch" Margin="6,10,0,0" VerticalAlignment="Top" />
        <Button x:Name="btnOK" Content="{x:Static res:Language.OK}" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="Button_Click" />
    </Grid>
</Window>