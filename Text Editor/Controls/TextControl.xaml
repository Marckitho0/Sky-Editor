        <TextBox x:Name="txtText" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" AcceptsReturn="True" AcceptsTab="True" />
    </Grid>
</SkyEditorBase:ObjectControl>
