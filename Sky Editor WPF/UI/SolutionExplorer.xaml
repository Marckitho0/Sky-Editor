<UserControl x:Class="UI.SolutionExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkyEditorWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TreeView x:Name="tvSolution">
            <TreeView.ContextMenu>
                <ContextMenu x:Name="menuContext">
                    <MenuItem x:Name="menuOpen" Header="Open" />
                    <MenuItem x:Name="menuAddFolder" Header="Create Folder" />
                    <MenuItem x:Name="menuCreateProject" Header="Create Project" />
                    <MenuItem x:Name="menuCreateFile" Header="Create File" />
                    <MenuItem x:Name="menuAddExistingFile" Header="Add Existing File"/>
                    <MenuItem x:Name="menuDelete" Header="Delete" />
                    <MenuItem x:Name="menuProperties" Header="Properties"/>
                </ContextMenu>
            </TreeView.ContextMenu>
        </TreeView>
    </Grid>
</UserControl>
