<Window x:Class="UI.NewSolutionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:skyEditorBase="clr-namespace:SkyEditorWPF"
    Title="New Solution" Height="161" Width="527" ResizeMode="NoResize">
    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="13,0,0,0" VerticalAlignment="Top"/>
        <Label Content="Type:" HorizontalAlignment="Left" Margin="19,28,0,0" VerticalAlignment="Top"/>
        <Label Content="Location:" HorizontalAlignment="Left" Margin="0,54,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" Height="23" Margin="62,4,90,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <skyEditorBase:SearchableDropDown x:Name="ddType" Margin="63,31,90,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtLocation" Height="23" Margin="63,58,90,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Button x:Name="btnBrowse" Content="Browse..." HorizontalAlignment="Right" Margin="0,60,10,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75"/>
        <Button x:Name="btnOk" Content="OK" HorizontalAlignment="Right" Margin="0,0,90,10" Width="75" Height="20" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
