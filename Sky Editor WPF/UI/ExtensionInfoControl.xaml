<local:ObjectControl x:Class="UI.ExtensionInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkyEditorWPF.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <UniformGrid Columns="2" HorizontalAlignment="Left" Width="300" VerticalAlignment="Top">
            <Label x:Name="lblName">Name</Label>
            <TextBox x:Name="txtName"></TextBox>
            <Label x:Name="lblDescription">Description</Label>
            <TextBox x:Name="txtDescription"></TextBox>
            <Label x:Name="lblAuthor">Author</Label>
            <TextBox x:Name="txtAuthor"></TextBox>
            <Label x:Name="lblVersion">Version</Label>
            <TextBox x:Name="txtVersion"></TextBox>
        </UniformGrid>
    </Grid>
</local:ObjectControl>
