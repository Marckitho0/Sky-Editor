<Window x:Class="UI.PluginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Plugin Manager" Height="341" Width="428">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*" />
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="200*" />
        </Grid.ColumnDefinitions>
        <Label Content="Available Updates" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" />
        <ListBox Margin="10,33,10,10" />
        <ListBox Margin="10,33,10,35" Grid.Column="2" />
        <Label Content="Installed Plugins" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Grid.Column="2" />  
        <Button Content="Save" Grid.Column="2" HorizontalAlignment="Left" Margin="125,280,0,0" VerticalAlignment="Top" Width="75" />
        <Button Content="Delete" Grid.Column="2" HorizontalAlignment="Left" Margin="10,280,0,0" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>