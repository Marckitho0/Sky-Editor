<Window x:Class="GameCodeSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ROMEditor"
             mc:Ignorable="d" 
             Title="Game Code Selector"
             Height="174.153" Width="396.61">
    <Grid>
        <Label x:Name="label" Content="Please type the 4 character game code, or use a preset." Margin="10,10,9,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Preset:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnUse" Content="Use" HorizontalAlignment="Right" Margin="0,45,9,0" VerticalAlignment="Top" Width="75" Height="22"/>
        <ComboBox x:Name="cbPreset" Margin="90,45,90,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Game Code:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtGameCode" Height="23" Margin="90,76,90,0" TextWrapping="Wrap" Text="" MaxLength="4" VerticalAlignment="Top"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="304,113,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
